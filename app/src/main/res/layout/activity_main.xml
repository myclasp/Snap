<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/final_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_above="@+id/snapTV"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/clasplogohoriz" />

    <TextView
        android:id="@+id/snapTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Snapp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/clasp_colour"
        android:textSize="52sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snapTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualise!"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login!"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <Button
        android:id="@+id/upload"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Donate Data"
        android:visibility="visible"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:background="#ff0000"/>

    <ImageView
        android:id="@+id/lheart"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:contentDescription="donate"
        android:src="@drawable/lheart"
        android:layout_alignTop="@+id/progressBar"
        android:layout_alignStart="@+id/imageView" />

</RelativeLayout>