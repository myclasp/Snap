<RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:descendantFocusability="blocksDescendants"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:id="@+id/date_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="time"
            android:id="@+id/hour_min_sec_tv"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:gravity="center_vertical"
            fontPath="fonts/digital-7-mono.ttf"
            android:background="@color/up_primary"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location"
            android:id="@+id/location_tv"
            android:textColor="@color/Black"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/hour_min_sec_tv"
            android:layout_toEndOf="@+id/hour_min_sec_tv"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>

    <!--

        <LinearLayout
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/barter_green"
                    android:orientation="horizontal"
                    android:layout_below="@+id/transactionDate"/>

    -->

</RelativeLayout>